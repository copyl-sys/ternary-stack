    if (!g || src < 0 || dst < 0 || src >= g->nodes || dst >= g->nodes) return TRIT_INVALID_INPUT;
    free_t81bigint(g->adj[src][dst]);
    g->adj[src][dst] = copy_t81bigint(weight);
    return TRIT_OK;
}

